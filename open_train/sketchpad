# http://www.steinm.com/blog/motion-detection-webcam-python-opencv-differential-images/

def diffImg(t0, t1, t2):
	  d1 = cv2.absdiff(t2, t1)
	  d2 = cv2.absdiff(t1, t0)
    return cv2.bitwise_and(d1, d2)
    
    




